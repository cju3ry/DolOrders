<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="@string/commande_titre"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:hint="@string/client_hint_nom">

                <AutoCompleteTextView
                    android:id="@+id/auto_complete_client"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/layout_infos_client"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="4dp"
                android:padding="8dp"
                android:background="@drawable/bg_info_client_rounded">

                <TextView
                    android:id="@+id/tv_client_adresse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/commande_etiquette_adresse"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    app:drawableStartCompat="@drawable/ic_location"
                    android:drawablePadding="8dp"
                    app:drawableTint="@color/blue_dolibarr" />

                <TextView
                    android:id="@+id/tv_client_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/commande_etiquette_numTel"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    app:drawableStartCompat="@drawable/ic_phone"
                    android:drawablePadding="8dp"
                    app:drawableTint="@color/blue_dolibarr" />
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_date"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:hint="@string/commande_champ_date">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="date"
                    android:drawableEnd="@android:drawable/ic_menu_my_calendar" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/container_details_commande"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="@string/commande_champ_article">

                    <AutoCompleteTextView
                        android:id="@+id/auto_complete_article"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#E0E0E0"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingStart="4dp"
                    android:paddingEnd="0dp">

                    <TextView android:text="@string/commande_article_col_libelle" android:textStyle="bold" android:textColor="@android:color/black" android:layout_weight="3" android:layout_width="0dp" android:layout_height="wrap_content" android:textSize="12sp"/>
                    <TextView android:text="@string/commande_article_col_pu" android:gravity="end" android:textStyle="bold" android:textColor="@android:color/black" android:layout_weight="1.5" android:layout_width="0dp" android:layout_height="wrap_content" android:textSize="12sp"/>
                    <TextView android:text="@string/commande_article_col_qte" android:gravity="center" android:textStyle="bold" android:textColor="@android:color/black" android:layout_weight="1.2" android:layout_width="0dp" android:layout_height="wrap_content" android:textSize="12sp"/>
                    <TextView android:text="@string/commande_article_col_rem" android:gravity="center" android:textStyle="bold" android:textColor="@android:color/black" android:layout_weight="1.2" android:layout_width="0dp" android:layout_height="wrap_content" android:textSize="12sp"/>
                    <TextView android:text="@string/commande_article_col_total" android:gravity="end" android:textStyle="bold" android:textColor="@android:color/black" android:layout_weight="1.8" android:layout_width="0dp" android:layout_height="wrap_content" android:textSize="12sp"/>
                    <View android:layout_width="34dp" android:layout_height="1dp"/>
                </LinearLayout>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="@drawable/bg_border_gray"
                    android:fadeScrollbars="false"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:id="@+id/layout_articles_selectionnes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:divider="?android:dividerHorizontal"
                        android:showDividers="middle"/>
                </ScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_marginBottom="32dp">

                    <TextView
                        android:id="@+id/tv_nb_articles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/commande_champ_totalArticle"
                        android:textSize="16sp"
                        android:textStyle="italic"
                        android:textColor="@color/blue_dolibarr"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/commande_champ_total"
                        android:textAllCaps="true"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/blue_dolibarr"/>

                    <TextView
                        android:id="@+id/tv_total_final"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="@string/commande_montant_total_base"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/blue_dolibarr"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_annuler"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:text="@string/bouton_annuler"
                        android:textColor="@android:color/darker_gray"
                        app:strokeColor="@android:color/darker_gray" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_valider"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/blue_dolibarr"
                        android:text="@string/bouton_valider"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        android:textColor="@android:color/white" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>