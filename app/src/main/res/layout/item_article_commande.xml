<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_ligne"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:paddingStart="4dp"
    android:paddingEnd="4dp"
    android:background="@drawable/border_bottom"
    android:clickable="true"
    android:focusable="true"
    android:backgroundTint="#FFFFFF">

    <TextView
        android:id="@+id/text_libelle_article"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="Nom Article"
        android:textColor="@android:color/black"
        android:textSize="13sp"
        android:maxLines="2"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/text_prix_unitaire"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:gravity="end"
        android:text="0.00 €"
        android:textSize="13sp"
        android:textColor="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/text_quantite_article"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:gravity="center"
        android:text="1"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/text_remise_ligne"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:gravity="center"
        android:text="0%"
        android:textSize="13sp"
        android:textColor="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/text_total_ligne"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.8"
        android:gravity="end"
        android:text="0.00 €"
        android:textStyle="bold"
        android:textColor="@color/blue_dolibarr"
        android:textSize="13sp"
        android:paddingEnd="4dp"/>

    <ImageButton
        android:id="@+id/btn_edit_article"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@android:drawable/ic_menu_edit"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="@color/blue_dolibarr"
        android:padding="6dp"
        android:contentDescription="Modifier"/>

    <ImageButton
        android:id="@+id/btn_delete_article"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@android:drawable/ic_menu_delete"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="@android:color/holo_red_dark"
        android:padding="6dp"
        android:contentDescription="Supprimer"/>

</LinearLayout>