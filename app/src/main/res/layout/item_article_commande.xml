<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="@drawable/border_bottom"> <TextView
    android:id="@+id/text_libelle_article"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="3"
    android:text="Nom Article"
    android:textColor="@android:color/black"
    android:textSize="14sp"
    android:maxLines="2"
    android:ellipsize="end"/>

    <TextView
        android:id="@+id/text_prix_unitaire"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:gravity="end"
        android:text="10.00 €"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"/>

    <EditText
        android:id="@+id/edit_text_quantite_article"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:gravity="center"
        android:inputType="number"
        android:background="@android:drawable/edit_text"
        android:textSize="14sp"
        android:text="1"/>

    <EditText
        android:id="@+id/edit_text_remise_ligne"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:background="@android:drawable/edit_text"
        android:hint="%"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/text_total_ligne"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.8"
        android:gravity="end"
        android:text="100 €"
        android:textStyle="bold"
        android:textColor="@color/blue_dolibarr"
        android:textSize="13sp"
        android:paddingEnd="4dp"/>

    <ImageButton
        android:id="@+id/btn_delete_article"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@android:drawable/ic_menu_delete"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="@android:color/holo_red_dark" />

</LinearLayout>